{% embed "modules/notification/views/layouts/htmlv2.twig" %}

    {% block title %}
        {{ t('mail.user_reconfirm.title', title) | raw }}
    {% endblock %}

    {% block headerimage %}
        {{ base64_image('@notification-assets/images/headers/blue_6.jpg') | raw }}
    {% endblock %}

    {% block content %}

        <p>
            {{ t('mail.user_reconfirm.p1',
                'I am just sending you this email, to make sure it is the right email-address in the system.'
            ) | raw }}
        </p>

        <p>
            {{ t('mail.user_reconfirm.p2',
                'If you {confirm_link} to confirm your email-address, that would help me so much.', {
                'confirm_link': '<a href="' ~ confirm_url ~ '" target="_blank">' ~ t('mail.links.click_this_link', 'click this link') ~ '</a>'
            }) | raw }}
        </p>

        <p>
            {{ t('mail.user_reconfirm.p3',
            'Thanks for being a part of KidUp.'
            ) | raw }}
        </p>

    {% endblock %}

{% endembed %}