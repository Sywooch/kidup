{% embed "modules/notification/views/layouts/htmlv2.twig" %}

    {% block title %}
        {{ t('mail.item_unfinished_reminder.title', title) | raw }}
    {% endblock %}

    {% block headerimage %}
        {{ base64_image('@notification-assets/images/headers/green_5.jpg') | raw }}
    {% endblock %}

    {% block content %}

        <p>
            {{ t('mail.item_unfinished_reminder.p1',
                'You are only a few steps away from finalizing your product. When you have finished it, and published it, you can rent out your children equipment and earn a little extra.'
            ) | raw }}
        </p>

        <p>
            {{ t('mail.item_unfinished_reminder.p2',
                'You do not have to worry, because KidUp is here to help. Do you have a question? Read our {faq_link} or {mail_link_support} to support. Did you know, that all equipment is protected by a guarantee of 25.000 DKK.', {
                'mail_link_support': '<a href="mailto:' ~ email_support ~ '" target="_blank">' ~ t('mail.links.support', 'support') ~ '</a>',
                'faq_link': '<a href="' ~ faq_url ~ '">' ~ t('mail.links.faq', 'FAQ') ~ '</a>'
            }) | raw }}
        </p>

        <p>
            {{ t('mail.item_unfinished_reminder.p3',
            'Be ready to earn a little extra, right now, by {finish_product_link}.', {
                'finish_product_link': '<a href="' ~ finish_product_url ~ '" target="_blank">' ~ t('mail.links.finish_product', 'finishing your product') ~ '</a>'
            }) | raw }}
        </p>

    {% endblock %}

{% endembed %}