{% embed "modules/notification/views/layouts/html.twig" %}

    {% block title %}
        {{ t('mail.booking_start_owner.title', 'Remember your rent! It is starting soon') | raw }}
    {% endblock %}

    {% block headerimage %}
        {{ imageUrl('kidup/email/headers/green_4.jpg') | raw }}
    {% endblock %}

    {% block content %}

        <table id="image-left" width="100%">
            <tr>
                <td width="40%">
                    {{ responsiveImage('kidup/email/image-green-stroller.png') | raw }}
                </td>
                <td width="60%" class="image-left__content">
                    <h3>{{ t('mail.booking_start_owner.t1', 'Do you have everything planned?') }}</h3>
                    <p>
                        {{ t('mail.booking_start_owner.p1',
                        'This is a reminder that your rent to {renter_name} is starting on {booking_start}.', {
                            'renter_name': renter_name,
                            'booking_start': booking_start_date
                        }) | raw }}

                        {% if renter_phone_url == null %}
                            {{ t('mail.booking_start_owner.p2_1',
                            'If you need to plan the last few things you could contact {renter_name} through the app. Or through {email_link}.', {
                                'renter_name': renter_name,
                                'email_link': '<a href="' ~ renter_email_url ~ '" target="_blank">' ~ t('mail.links.email', 'email') ~ '</a>'
                            }) | raw }}
                        {% else %}
                            {{ t('mail.booking_start_owner.p2_2',
                            'If you need to plan the last few things you could contact {renter_name} through the app. Or through the {phone_link} or {email_link}.', {
                                'renter_name': renter_name,
                                'phone_link': '<a href="' ~ renter_phone_url ~ '" target="_blank">' ~ t('mail.links.phone', 'phone') ~ '</a>',
                                'email_link': '<a href="' ~ renter_email_url ~ '" target="_blank">' ~ t('mail.links.email', 'email') ~ '</a>'
                            }) | raw }}
                        {% endif %}
                    </p>
                </td>
            </tr>
        </table>

        <table id="image-right" width="100%">
            <tr>
                <td width="60%" class="image-right__content">
                    <h3>{{ t('mail.booking_start_owner.t2', 'If problems occur, we have your back!') }}</h3>
                    <p>
                        {{ t('mail.booking_start_owner.p3',
                        'Remember that KidUp is all about trust and being together about being a parent. Therefore you should help {renter_name}. Make sure the equipment is cleaned before handing it over. Make sure everything is intact and okay. Give {renter_name} a nice brief guide, so they know how to correctly operate the equipment.', {
                            'renter_name': renter_name
                        }) | raw }}
                    </p>
                </td>
                <td width="40%">
                    {{ responsiveImage('kidup/email/image-pink-speen.png') | raw }}
                </td>
            </tr>
        </table>

        <table id="text-center" width="100%">
            <tr>
                <td>
                    <p>
                        {{ t('mail.booking_start_owner.p4',
                            'We will transfer the total rent, excluding a small fee, the day after {renter_name} picked up {item_name}. For this rent, it is {total_payout_amount}. Be aware that it can take up to 5 days excluding weekends and holidays.', {
                            'item_name': item_name,
                            'renter_name': renter_name,
                            'total_payout_amount': total_payout_amount
                        }) | raw }}
                    </p>
                </td>
            </tr>
        </table>

        <p></p>

    {% endblock %}

{% endembed %}