{% embed "modules/notification/views/layouts/html.twig" %}

    {% block title %}
        {{ t('mail.review_reminder.title', 'You forgot to star') | raw }}
    {% endblock %}

    {% block headerimage %}
        {{ imageUrl('kidup/email/headers/blue_4.jpg') | raw }}
    {% endblock %}

    {% block content %}

        <table id="image-left" width="100%">
            <tr>
                <td width="40%">
                    <img src="{{ imageUrl('kidup/email/image-blue-girl.png') }}" width="100%" alt="Image">
                </td>
                <td width="60%" class="image-left__content">
                    <h3>{{ t('mail.review_reminder.t1', 'Tell us about your experience!') }}</h3>
                    <p>
                        {{ t('mail.review_reminder.p1',
                        'I hope you had a great experience from the rent with {reviewed_user}.', {
                            'reviewed_user': reviewed_user
                        }) | raw }}
                        {{ t('mail.review_reminder.p2',
                        'I am writing because, you have not yet completed the review. You could do it right now, it only takes 20 seconds! And by rating other parents, you help by making KidUp transparent for other parents. Thus making great parents look even greater.') | raw }}
                    </p>
                    <a class="button button--green" href="{{ review_url | raw }}" target="_blank">{{ t('mail.links.review_now', 'Review now') | raw }}</a>
                </td>
            </tr>
        </table>

    {% endblock %}

{% endembed %}