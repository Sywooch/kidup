{% embed "modules/notification/views/layouts/htmlv2.twig" %}

    {% block title %}
        {{ t('mail.user_recovery.title', title) | raw }}
    {% endblock %}

    {% block headerimage %}
        {{ base64_image('@notification-assets/images/headers/blue_6.jpg') | raw }}
    {% endblock %}

    {% block content %}

        <p>
            {{ t('mail.user_recovery.p1',
            'Did you ask for me to try to recover you password? I could not find it, but if you want a new one you can {recovery_link}.', {
                'recovery_link': '<a href="' ~ recovery_url ~ '" target="_blank">' ~ t('mail.links.click_this_link', 'click this link') ~ '</a>'
            }) | raw }}
        </p>

        <p>
            {{ t('mail.user_recovery.p2',
                'If this mail was not requested by you, then just ignore it.'
            ) | raw }}
        </p>

    {% endblock %}

{% endembed %}